<h1>投稿一覧画面</h1>
<% @posts.each do |post| %>
<div class="card" style="width: 25rem;">
  <div class="card-block">
    <div class="card-title"><%= post.user.name %>さんの投稿です</div>
    <div class="card-text"><%= post.body %></div>
    
  </div>
<%= link_to user_path(post.user.id) do %>
      <%= attachment_image_tag post.user, :profile_image,fallback: "no_image.jpg", class:"card-img-top"; %>
    <% end %>
 
  <% if post.image_id != blank? %>
  <%= attachment_image_tag post, :image, :fill, 100, 100 %>
  <% end %>
  <% if post.user == current_user %>
    <%= link_to "編集する",edit_post_path(post.id) %>
    <%= link_to "削除する",post_path(post.id),method: :delete,"data-confirm"=>"削除しますか？" %>
  <% end %>
</div>

<% end %>
