<h1>投稿一覧画面</h1>
<% @posts.each do |post| %>
<div>
  <%= post.body %>
  <%= post.user.name %>さんの投稿です
  <%= attachment_image_tag post.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
  <% if post.image_id != blank? %>
  <%= attachment_image_tag post, :image, :fill, 100, 100 %>
  <% end %>
  <% if post.user == current_user %>
    <%= link_to "編集する",edit_post_path(post.id) %>
    <%= link_to "削除する",post_path(post.id),method: :delete,"data-confirm"=>"削除しますか？" %>
  <% end %>
</div>

<% end %>
