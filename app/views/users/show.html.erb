<h1>マイページ</h1>
<%= @user.name %>
<%= @user.introduction %>
<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback:"no_image.jpg" %>
<% if @user == current_user %>
<%= link_to"会員情報編集",edit_user_path(@user.id) %>
<%= link_to "勉強時間登録" ,new_study_time_path %>
<% end %>




<% if @user != current_user %>
<div id="follow_buttons_<%= @user.id %>">
   <%= render partial: 'users/relationship', locals: { user: @user } %>
</div>
<% end %>

<% if @user == current_user %>
<div id="is_active_buttons_<%= @user.id %>">
   <%= render partial: 'users/is_active', locals: { user: @user } %>
</div>
<% else %>
    <% if @user.is_active == true %>
    <p><%= @user.name %>さんは勉強中です</p>
    <% else %>
    <p><%= @user.name%>さんは休憩中です</p>
    <% end %>
<% end%>




<div>おすすめ書籍一覧
    <% @recommends.each do |recommend| %>
    <div>
        <%= link_to recommend.title,recommend_path(recommend.id) %>
        <%= recommend.favorites.count %>いいね
    </div>
    <% end %>
</div>
<div>つぶやき一覧
    <% @posts.each do |post | %>
    <div>
        <%= post.body %>
    </div>
    <% end %>
</div>