<div class="row">
    <div class="col text-center">
        <h1>マイページ</h1>
    </div>
</div>
<div class="row">
    <div class="col profile">
        <div>
            <div class="profile-image">
                <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback:"no_image.jpg", class:"mt-3 rounded-circle border" %>
            </div>
            <div>
                <%= @user.name %>
            </div>
             <div>
                 <%= @user.introduction %>
             </div>
             <div>
                 <% if @user == current_user %>
                    <%= link_to edit_user_path(@user.id), class:"no-underline" do %>
                      プロフィールを編集<i class="fas fa-edit"></i>
                    <% end %>
                 <% end %>
             </div>
             <% if @user == current_user %>
                <div id="is_active_buttons_<%= @user.id %>" class="btn">
                    <%= render partial: 'users/is_active', locals: { user: @user } %>
                </div>
                <div class="btn">
                    <%= link_to "勉強時間登録" ,new_study_time_path, class:"btn btn-secondary" %>
                </div>
            <% else %>
                <div id="follow_buttons_<%= @user.id %>">
                   <%= render partial: 'users/relationship', locals: { user: @user } %>
                </div>
                <% if @user.is_active == true %>
                    <p><%= @user.name %>さんは勉強中です</p>
                <% else %>
                    <p><%= @user.name%>さんは休憩中です</p>
                <% end %>
            <% end%>
        </div>
    </div>
</div>

<div class="row">
    <div class="col text-center">
        <% if @user == current_user %>
            <% @users.each do |user| %>
                <%= link_to user.name,user_path(user.id), class:"no-underline" %>
            <% end %>
            さんたちをはじめ、<%= @users.count %>人が勉強中です！
            <%= link_to "勉強中ユーザをもっと見る",users_path, class:"no-underline" %>
        <% end %>
    </div>
</div>

<div class="row">
    <div class="col-lg-6">
        <div>投稿書籍一覧
            <table>
                <tr>
                    <th></th>
                    <th></th>
                </tr>
                <% @recommends.each do |recommend| %>
                <tr>
                    <td>
                        <%= link_to recommend.title,recommend_path(recommend.id) %>
                    </td>
                    <td>
                        <i class="fas fa-heart favorite"></i><%= recommend.favorites.count %>
                    </td>
                </tr>
                <% end %>
            </table>
        </div>
    </div>
    <div class="col-lg-6">
        <div>ひとりごと一覧
            <% @posts.each do | post | %>
            <div>
                <div class="post post-img">
                    <%= attachment_image_tag post.user, :profile_image, :fill, 100, 100, fallback:"no_image.jpg", class:"mt-3 rounded-circle border" %>
                </div>
                <div class="post">
                    <%= post.user.name %>
                    <%= post.created_at.strftime("%Y/%m/%e") %></br>
                    <%= post.body %></br>
                    <%= attachment_image_tag post, :image, :fill, 200, 200 %>
                </div>
            </div>
            <% end %>
        </div>
    </div>
</div>


