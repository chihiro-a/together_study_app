<% if @user.is_active == true %>
        <%= form_with model: @user, url:stop_user_path,remote:true do |f| %>
        <%= f.hidden_field :is_active, value: false %>
        <%= f.submit" 勉強終了 ",class:"btn btn-danger" %>
        <% end %>
    <% else %>
        <%= form_with model: @user, url:start_user_path,remote:true do |f| %>
        <%= f.hidden_field :is_active, value: true %>
        <%= f.submit" 勉強開始 ",class:"btn btn-success" %>
        <% end %>
<% end %>