<div class="row">
  <div class="col text-center">
    <h1>プロフィールを編集</h1>
  </div>
</div>

<div class="errors">
  <% if @user.errors.any? %>
    <%= @user.errors.count %>件のエラーが発生しました
    <% @user.errors.full_messages.each do |message| %>
    <div>
      <%= message %>
    </div>
    <% end %>
  <% end %>
</div>

<%= form_with model:@user, local:true do |f| %>
<div class="row sign-field">
  <div class="col text-center">
    <div>
      <label for="inputName">名前</label>
    </div>
    <div>
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
    </div>
  </div>
</div>
<div class="row sign-field">
  <div class="col text-center">
    <div>
      <label for="introduction">自己紹介</label>
    </div>
    <div>
      <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介", size:"300px"%>
    </div>
  </div>
</div>
<div class="row sign-field">
  <div class="col text-center">
    <div>
      <label for="inputImage">アイコン画像</label>
    </div>
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback:"no_image.jpg" %>
    <div>
      <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
    </div>
  </div>
</div>
<div class="text-center">
  <%= f.submit "変更を保存",class:"btn btn-success post-btn" %>
  <% end %>
</div>



