<div class="container">
  <div class="text-center">
    <ul id="tab-menu">
      <li><a href="#tab1" class="active no-underline">週間ランキング</a></li>
      <li><a href="#tab2" class="no-underline">月間ランキング</a></li>
    </ul>
    <div id="tab-contents">
          <div id="tab1" class="tab">
            <table class="ranking-table">
              <tr>
                <th class="rank">順位</th>
                <th class="rank-user-name"> ユーザ名</th>
                <th class="rank-hour">勉強時間</th>
              </tr>
              <% rank_count = 0 %>
              <% @weekly_ranks.each do |  user , min | %>
              <tr>
                <td><%= rank_count += 1 %>位</td>
                <td><% user = User.find(user) %>
                <div class="text-left">
                    <%= link_to user_path(user.id), class:"no-underline" , method: :get do %>
                    <%= attachment_image_tag user, :profile_image, :fill, 70, 70, fallback:"no_image.jpg", class:"mt-3 rounded-circle border" %><%= user.name %>
                    <% end %>
                </div>
                </td>
                <td><%= (min/60.0).floor(2) %>時間</td>
              </tr>
              <% end %>
            </table>
            </div>
            <div id="tab2" class="tab">
              <table class="ranking-table">
                <tr>
                  <th class="rank">順位</th>
                  <th class="rank-user-name"> ユーザ名</th>
                  <th class="rank-hour">勉強時間</th>
                </tr>
                <% rank_count = 0 %>
                <% @monthly_ranks.each do |  user , min | %>
                <tr>
                  <td><%= rank_count += 1 %>位</td>
                  <td><% user = User.find(user) %>
                  <div class="text-left">
                      <%= link_to user_path(user.id), class:"no-underline", method: :get do %>
                      <%= attachment_image_tag user, :profile_image, :fill, 70, 70, fallback:"no_image.jpg", class:"mt-3 rounded-circle border" %><%= user.name %>
                      <% end %>
                  </div>
                  </td>
                  <td><%= (min/60.0).floor(2) %>時間</td>
                </tr>
                <% end %>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>


