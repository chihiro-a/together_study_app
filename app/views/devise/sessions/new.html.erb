<div class="container">
  <div class="row">
    <div class="col text-center">
      <h2>ログイン</h2>
    </div>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row sign-field">
    <div class="col text-center">
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" ,placeholder:"メールアドレス" %>
      </div>
    </div>
  </div>
  <div class="row sign-field">
    <div class="col text-center">
      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder:"パスワード（６文字以上）" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col text-center">
      <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me ,"ログイン情報を記録する"%>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row sign-field">
    <div class="col text-center">
      <div class="actions">
        <%= f.submit "ログイン",class:"btn btn-success" %>
      </div>
    </div>
  </div>
  <% end %>
    <div class="row sign-field">
      <div class="col text-center">
        新規登録は<%= link_to "こちら", new_user_registration_path, class:"no-underline" %>
      </div>
    </div>
    <div class="row sign-field">
      <div class="col text-center">
        <%= link_to "パスワードをお忘れですか？", new_user_password_path, class:"no-underline" %>
      </div>
    </div>
</div>
