<!DOCTYPE html>
<html>
  <head>
    <title>TogetherStudy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container p-2">


      <header>
         <% if user_signed_in? %>
          <li>
            <%= link_to root_path , method: :get do %>
              <%= image_tag('logo.jpg') %>
            <% end %>
          </li>
          <li>
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
          </li>
          <li>
            <%= link_to "マイページ", user_path(current_user.id) %>
          </li>
          <li>
            <%= link_to "みんなのおすすめ書籍", recommends_path %>
          </li>
          <li>
            <%= link_to "フォローユーザ" ,timeline_path %>
          </li>
          <li>
            <%= link_to "ランキング",weekly_ranking_path %>
          </li>
          <li>
            <%= link_to "勉強中" ,users_path %>
          </li>
        <% else %>
          <%= link_to root_path , method: :get do %>
            <%= image_tag('logo.jpg') %>
          <% end %>
        <% end %>
      </header>

      <%= yield %>

    </div>
  </body>
</html>
