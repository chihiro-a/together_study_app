<% if recommend.favorited_by?(current_user) %>
    <p>
      <%= link_to recommend_favorites_path(recommend) ,method: :delete ,remote: true do %>
      <i class="fas fa-heart favorite"></i><span class="favorite"><%= recommend.favorites.count %></span>
      <% end %>
    </p>
<% else %>
    <p>
      <%= link_to recommend_favorites_path(recommend), method: :post ,remote: true do %>
      <i class="far fa-heart favorite"></i><%= recommend.favorites.count %>
      <% end %>
    </p>
<% end %>